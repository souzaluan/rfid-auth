{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "allowJs": true,
      "sourceMap": true,
      "rootDirs": ["src"],
      "baseUrl": "src",
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    },
  }